<%- model_class = Query -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @query.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:comment) %>:</strong></dt>
  <dd><%= @query.comment %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sql) %>:</strong></dt>
  <dd><%= @query.sql %></dd>
  <dt><strong><%= model_class.human_attribute_name(:plan) %>:</strong></dt>
  <dd><%= @query.plan %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              queries_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_query_path(@query), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              query_path(@query),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
